<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/menu_margin"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/menu_padding"
    android:paddingTop="@dimen/menu_padding">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/menu_image_size"
        android:layout_height="@dimen/menu_image_size"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/menu_margin" />

    <TextView
        android:id="@+id/textContentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_margin"
        android:singleLine="true"
        android:textColor="@color/text_menu_color"
        android:textSize="@dimen/menu_text_size" />
</LinearLayout>